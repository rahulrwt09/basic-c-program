#include <stdio.h>

int main()
{   
    int oddeven();
    int a;
    printf("enter a number");
    scanf("%d", &a);
    oddeven(a);
}
int oddeven(int x)
{
      if(x%2==0)
    printf("%d is even number", x);
    else
    printf("%d is odd number", x);
    return x;
}
